# PostgreSQL Database Configuration
# Copy this file to .env and adjust values as needed
# Update docker-compose.yml to reference variables
#    For example: POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-postgres}

# Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hotel_reservation

# Database Configuration
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=en_US.UTF-8

# Port Mapping
# Change if port 5432 is already in use on your host
POSTGRES_PORT=5432

# Container Name
POSTGRES_CONTAINER_NAME=hotel-postgres-standalone

# Network
POSTGRES_NETWORK=hotel-shared-network

# Volume Name
POSTGRES_VOLUME_NAME=hotel-postgres-data

# Performance Tuning (optional)
# Adjust based on your system resources
SHARED_BUFFERS=256MB
MAX_CONNECTIONS=200

# Logging (for development)
# Options: all, ddl, mod, none
LOG_STATEMENT=all
LOG_DESTINATION=stderr

# Backup Directory
BACKUP_DIR=./backups

